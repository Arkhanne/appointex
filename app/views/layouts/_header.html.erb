<header id="page-header">
  <div>
    <nav>
      <h1>Appointex</h1>
      <p>
        <% if current_user %>
          <%= link_to current_user.name, current_user %>
          <%= link_to 'Sign Out', session_path, method: :delete, class: 'button' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, class: 'button' %>
          <%= link_to 'Sign In', new_session_path, class: 'button' %>
        <% end %>
      </p>
    </nav>
  </div>
</header>
